{
    "name": "@doist/twist-sdk",
    "version": "0.1.0-alpha.5",
    "description": "A TypeScript wrapper for the Twist REST API.",
    "author": "Doist developers",
    "homepage": "https://doist.github.io/twist-sdk-typescript/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Doist/twist-sdk-typescript.git"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "scripts": {
        "clean": "rimraf dist",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "build": "rimraf dist && npx tsc -p tsconfig.json",
        "type-check": "npx tsc --noEmit",
        "biome:sort-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write .",
        "lint:check": "biome lint",
        "lint:write": "biome lint --write",
        "format:check": "biome format",
        "format:write": "biome format --write",
        "check": "biome check",
        "check:fix": "biome check --fix --unsafe",
        "audit": "npm audit --audit-level=moderate",
        "integrity-checks": "npm-run-all clean check test build",
        "prepublishOnly": "npm run integrity-checks",
        "prepare": "npm run build"
    },
    "dependencies": {
        "camelcase": "8.0.0",
        "ts-custom-error": "^3.2.0",
        "uuid": "^9.0.0",
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.5",
        "@types/uuid": "9.0.8",
        "husky": "9.1.7",
        "lint-staged": "16.2.6",
        "msw": "^2.11.3",
        "npm-run-all2": "8.0.4",
        "rimraf": "6.1.0",
        "ts-node": "10.9.2",
        "type-fest": "^5.0.0",
        "typescript": "5.9.3",
        "vitest": "3.2.4"
    },
    "peerDependencies": {
        "type-fest": "^4.12.0 || ^5.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged && npm run build"
        }
    },
    "lint-staged": {
        "*": [
            "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
        ]
    },
    "files": [
        "dist/**/*",
        "!dist/**/*.test.*",
        "!dist/testUtils",
        "!dist/scratch.*"
    ]
}
