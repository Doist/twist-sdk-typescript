{
    "name": "@doist/twist-sdk",
    "version": "0.1.0-alpha.0",
    "description": "A TypeScript wrapper for the Twist REST API.",
    "author": "Doist developers",
    "repository": "git@github.com:doist/twist-sdk-typescript.git",
    "license": "MIT",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/cjs/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "sideEffects": false,
    "scripts": {
        "clean": "rimraf dist",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "build": "rimraf dist && npm run build:cjs && npm run build:esm && npm run build:esm-package",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build:esm-package": "echo '{\"type\":\"module\"}' > dist/esm/package.json",
        "type-check": "npx tsc --noEmit",
        "biome:sort-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write .",
        "lint:check": "biome lint",
        "lint:write": "biome lint --write",
        "format:check": "biome format",
        "format:write": "biome format --write",
        "check": "biome check",
        "check:fix": "biome check --fix --unsafe",
        "audit": "npm audit --audit-level=moderate",
        "integrity-checks": "npm-run-all clean check test build",
        "prepublishOnly": "npm run integrity-checks",
        "prepare": "npm run build"
    },
    "dependencies": {
        "camelcase": "6.3.0",
        "ts-custom-error": "^3.2.0",
        "uuid": "^9.0.0",
        "zod": "4.1.11"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.4",
        "@types/uuid": "9.0.7",
        "husky": "8.0.3",
        "lint-staged": "13.1.4",
        "npm-run-all2": "5.0.0",
        "rimraf": "3.0.2",
        "ts-node": "10.9.1",
        "type-fest": "^4.12.0",
        "typescript": "5.9.3",
        "vitest": "3.2.4"
    },
    "peerDependencies": {
        "type-fest": "^4.12.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged && npm run build"
        }
    },
    "lint-staged": {
        "*": [
            "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
        ]
    },
    "files": [
        "dist/cjs/**/*",
        "dist/esm/**/*",
        "!dist/**/*.test.js",
        "!dist/**/*.test.d.ts",
        "!dist/**/*.test.d.ts.map"
    ]
}
